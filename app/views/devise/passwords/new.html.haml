.page.minipage
  .page-header
    %h1.title Forgot Your Password?

  = form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |f|
    = render partial: "partials/form_errors", locals: { object: resource }

    .field
      = f.label :email
      = f.email_field :email

    .field.actions
      = f.submit "Send me reset password instructions.", class: "button blue"
      = link_to "Sign In", root_path