.page
  .page-header
    %h1.title Create User Account

  = form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
    = render partial: "partials/form_errors", locals: { object: resource }

    .field
      = f.label :name
      = f.text_field :name

    .field
      = f.label :email
      = f.email_field :email

    .field.actions
      = f.submit "Create User Account", class: "button blue"