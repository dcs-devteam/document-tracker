- if office_signed_in?
  %ul.horizontal-menu
    %li= link_to "Dashboard", dashboard_path, class: "#{"current" if current_page?("dashboard")}"
    - if current_role == "office"
      %li= link_to "Your Documents", "#", class: "#{"current" if current_page?("documents")}"
      %li= link_to "Routed Documents", "#", class: "#{"current" if current_page?("documents")}"
    - elsif current_role == "admin"
      %li= link_to "Documents", "#", class: "#{"current" if current_page?("documents")}"
      %li= link_to "Document Types", "#", class: "#{"current" if current_page?("document_types")}"
      %li= link_to "Offices", "#", class: "#{"current" if current_page?("offices")}"