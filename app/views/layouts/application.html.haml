!!!
%html
  %head
    %meta{ charset: 'utf-8' }
    %title Document Tracker
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body{ class: "#{current_role} #{controller_name} #{action_name}" }
    = render "layouts/partials/header"
    = render "layouts/partials/navigation"

    #main-wrapper.clearfix
      %main.expanded
        #main-content
          = yield
        = render "layouts/partials/footer"

      %aside#main-sidebar
        .sidebar-exit &times;
        .replaceable-content
          = yield :sidebar